programa
{
	
	funcao inicio()
	{
		inteiro num
		escreva("Informe um número!")
		leia(num)
		se(num>0)
		{
			escreva("Este número é positivo!")
		}
		senao se(num<0)
		{
			escreva("Este número é negativo!")
		}
		senao
		{
			escreva("Este número é nulo!")
		}
	}
}
